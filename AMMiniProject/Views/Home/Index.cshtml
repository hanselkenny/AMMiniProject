@model AMMiniProject.Models.IndexViewModel;
@{
    ViewData["Title"] = "Verify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<style>
    .Error {
        color: red;
    }
</style>

<div class="main-content has-widget" id="main-content">
    <section class="page-heading">
        <div class="container">
            <h1>Verify E-Certificate</h1>
        </div>
    </section>

    <div class="container">
        <div class="box-container">
            <div class="single-content popup-content" id="target-id">
                <span class="alert is-warning" style="text-align: center;">
                    Silahkan masukkan data e-certificate yang ingin diverifikasi.
                </span>
                <form method="post" id="verifyForm">
                    <p>
                        <label>NIM<span class="required">*</span></label>
                        <input type="text" name="ExternalSystemID" id="ExternalSystemID">
                        @Html.ValidationMessageFor(model => model.ExternalSystemID, "", new { @class = "Error" })
                    </p>
                    <p>
                        <label>No. Ijazah<span class="required">*</span></label>
                        <input type="text" name="NoIjazah" id="NoIjazah">
                        @Html.ValidationMessageFor(model => model.NoIjazah, "", new { @class = "Error" })
                    </p>
                    <p>
                        <label>Tanggal Lahir<span class="required">*</span></label>
                        <span class="custom-datepicker">
                            <input type="text" name="Tgl_Lahir" class="datepicker" id="Tgl_Lahir">
                            <span class="icon-area"></span>
                        </span>
                        @Html.ValidationMessageFor(model => model.Tgl_Lahir, "", new { @class = "Error" })
                    </p>
                    <p>
                        <label>Tanggal Lulus<span class="required">*</span></label>
                        <span class="custom-datepicker">
                            <input type="text" name="Tgl_Lulus" class="datepicker" id="Tgl_Lulus">
                            <span class="icon-area"></span>
                        </span>
                        @Html.ValidationMessageFor(model => model.Tgl_Lulus, "", new { @class = "Error" })
                    </p>
                    <p style="text-align: center;">
                        <input type="submit" id="verifyButton" value="Verify" class="button button-primary">
                    </p>
                </form>

                <p style="text-align: center; margin-top: 20px">
                    <a class="button button-primary" asp-area="" asp-controller="Home" asp-action="Valid">Success Page</a>
                </p>

                <p style="text-align: center; margin-top: 20px">
                    <a class="button button-primary" asp-area="" asp-controller="Home" asp-action="Invalid">Error Page</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/scripts/jquery-3.5.1.min.js"></script>
<script src="~/lib/scripts/input-validation.js"></script>